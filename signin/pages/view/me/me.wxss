/* pages/view/me/me.wxss */
.me{
    width: 90%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
}
.personal{
    margin: 20rpx 0 0 0;
    display: flex;
    flex-direction: row;
    border-style: solid;
    padding: 10rpx 0 10rpx 0;
    border-width: 1rpx 0 1rpx 0;
    border-color: #f0f0f0;
}
.avatar{
    width: 100rpx;
    height: 100rpx;
    margin: auto 20rpx;
    border-style: solid;
    border-radius: 50rpx;
    border-width: 0;
}
.nick{
    margin: auto 20rpx;
    font-size: 32rpx;
    color: #808080;
}
.groupid{
    padding: 40rpx;
    font-size: 32rpx;
    /*color: #808080;*/
    border-style: solid;
    border-width: 0 0 1rpx 0;
    border-color: #f0f0f0;
}

.records{
    padding: 40rpx;
    font-size: 32rpx;
    /*color: #808080;*/
    border-style: solid;
    border-width: 0 0 1rpx 0;
    border-color: #f0f0f0;
}
.title{
    text-align: left;
}
.subtitle{
    text-align: right;
}
